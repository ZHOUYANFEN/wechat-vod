@import "../../comm/style/animation.wxss";
@import "../../component/message/message.wxss";
@import "../../component/comment/comment.wxss";
@import "../../component/input/input.wxss";
.fd-hd {
    position: relative;
    width: 100%;
    height: 400rpx;
    display: flex;
    justify-content: center;
    align-content: center;
    overflow: hidden;
}

.fd-hd:before {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    width: 100%;
    height: 600rpx;
    background-color: rgba(0, 0, 0, .6);
}
.pf-video {
    width: 100%;
    height: 400rpx;
}


.fd-data {
    display: flex;
    height: 150rpx;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
}
.fd-title-box{
  display: flex;
  height: 100rpx;
  align-items: center;
  width: 100%;
  margin: 20rpx;
}
.fd-title{
    width: 70%;
    font-size: 40rpx;
    text-align: center;
}
.fd-favorite {
    background: rgba(255, 255, 255, 0);
    color: #47a86c;
}
.fd-favorite-active {
    background: rgba(255, 255, 255, 0);
    border: gray;
    color: gainsboro;
}
button{
  font-size: 25rpx;
  background-color: #47a86c;
  width: 135rpx;
  border-radius: 7rpx;
  height: 65rpx;
  line-height: 63rpx;
}
.fd-data-item {
    width: 33.33%;
    text-align: center;
}

.fd-data-item {
    border-left: 1px solid #eee;
}

.fd-data-item:first-child {
    border-left: none;
}

.fd-data-num {
    font-size: 40rpx;
    font-weight: 100;
    color: #444;
}

.fd-data-title {
    color: #999;
}

.fd-bd {
    padding: 0 40rpx 40rpx;
}

.fd-bd-title {
    padding-left: 20rpx;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #444;
    border-left: 10rpx solid #47a86c;
}

.fd-bd-intro {
    text-align: justify;
    line-height: 1.5;
    color: #666;
}

.fd-bd-tag {
    display: flex;
}

.fd-bd-tag-item {
    padding: 5rpx 10rpx;
    margin-right: 15rpx;
    border: 1px solid #ccc;
    border-radius: 10rpx;
    color: #666;
}

.fd-bd-person {
    display: flex;
    width: 100%;
    height: 480rpx;
    overflow-x: scroll;
    overflow-y: hidden;
}

.fd-bd-person-item {
    margin-left: 20rpx;
    text-align: center;
}

.fd-bd-person-item:first-child {
    margin-left: 0;
}

.fd-bd-person-avatar {
    width: 280rpx;
    height: 400rpx;
}

.fd-bd-person-name {
    color: #666;

}

.fd-bd-person-role {
    color: #999
}

