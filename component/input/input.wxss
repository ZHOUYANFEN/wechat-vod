.inputText {
  /*评论输入框内容*/
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2000;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  height: 110rpx;
  padding-left: 21rpx;
  background: #fff;
  box-shadow:0 -1px 7px #ccc;
}
.inputText text.iconfont{
  position: relative;
  left: 42rpx;
}
.inputText input {
  flex: 1;
  height: 80rpx;
  background: #f2f2f2;
  border-radius: 10rpx;
  padding-left: 50rpx;
}

.inputText button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 149rpx;
  height: 80rpx;
  margin: 0 22rpx 0 20rpx;
  padding: 0;
  background: #47a86c;
  color: #fff;
  font-size: 28rpx;
}